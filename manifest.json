{
  "description": "Basic client for Secret-in",
  "manifest_version": 2,
  "name": "Secret-in",
  "version": "0.1",
  "homepage_url": "https://github.com/secretin",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "background": {
    "scripts": ["libs/secretin.js","libs/browser.js","background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "theme_icons": [{
        "light": "icons/icon-48.png",
        "dark": "icons/icon-48.png",
        "size": 48
    }],
    "default_title": "Secret-in",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "activeTab",
    "storage"
  ],
  "applications": {
    "gecko": {
      "id": "{a262434c-56a2-4b16-a0c3-38290deb5f4e}"
    }
  }
}
